.list-item{
  margin: 5px;
  border-bottom: 1px solid #ccc;
  padding-bottom: 5px;
}
.list-item::after{
  content: "";
  display: block;
  clear: both;
}
.list-item image{
  float: left;
  width: 80px;
  height: 120px;
  margin-right: 10px;
}
.list-item .li-info{
  float:left;
}
.list-item .title{
  font-size: 20px;
}
.list-item .info{
  font-size: 13px;
  width: 150px;
}
.list-item text{
  color: #faaf00
}
.list-item{
  position: relative;
}
.list-item button{
  background-color: #e54847;
  width: 60px;
  height: 30px;
  font-size: 13px;
  color: #fff;
  position: absolute;
  top:30px;
  right: 10px
}